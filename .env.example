# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/vamp?sslmode=require

# Auth
JWT_SECRET=your-secret-key-min-32-chars-change-me
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Server
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS and email links). Comma-separated for multiple origins.
# Example: https://vamp-web.onrender.com,https://staging.example.com
APP_URL=http://localhost:5173
API_URL=http://localhost:3001

# Storage (S3 or compatible)
S3_BUCKET=vamp-media
S3_REGION=ap-southeast-2
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=

# Email (SMTP)
EMAIL_FROM=no-reply@example.com
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Resend (alternative to SMTP)
RESEND_API_KEY=

# SendGrid (alternative to SMTP/Resend)
SENDGRID_API_KEY=

# Redis (optional, for BullMQ)
REDIS_URL=redis://localhost:6379
